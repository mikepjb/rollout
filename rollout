[[ -f ~/.Xresources ]] && xrdb -merge ~/.Xresources

if [ `xdpyinfo | awk '/dimensions/{print $2}'` = '3840x2160' ]; then
  xrdb -merge <<< 'Xft.dpi: 144'
fi

xset r rate 200 25

setxkbmap -layout us -option ctrl:nocaps

exec openbox-session
EOF
